# Database connection
DATABASE_URL=postgres://user:password@postgres:5432/portfolio_app
PGUSER=user
PGHOST=postgres
PGPASSWORD=password
PGDATABASE=portfolio_app
PGPORT=5432

# Database seeding (set to true only for first deployment)
SEED_DATABASE=true

# Server configuration
PORT=3000
NODE_ENV=production
VITE_API_URL=/api
SESSION_SECRET=your_session_secret_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# OpenAI API for chatbot
OPENAI_API_KEY=your_openai_api_key_here

# Domain configuration (when using a reverse proxy)
DOMAIN=yourdomain.com