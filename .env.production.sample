# Production Environment Variables
# Copy this file to .env on your Oracle VPS and update the values

# Node environment
NODE_ENV=production

# Database configuration - replace with your actual database credentials
DATABASE_URL=postgresql://portfolio_user:your_secure_password@localhost:5432/portfolio

# JWT Secret for authentication - generate a secure random string
JWT_SECRET=generate_a_secure_random_string_here

# Application Port - 5000 is recommended for use with NGINX
PORT=5000

# Performance and security settings
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window

# CORS configuration - replace with your actual domain
CORS_ORIGIN=https://yourdomain.com

# SSL settings for secure cookies (when using HTTPS)
COOKIE_SECURE=true
SESSION_SECRET=generate_another_secure_random_string_here

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Timeout settings (in milliseconds)
REQUEST_TIMEOUT=60000  # 60 seconds

# Media upload configuration
MAX_FILE_SIZE=5000000  # 5MB in bytes
UPLOAD_DIR=/home/ubuntu/portfolio/uploads